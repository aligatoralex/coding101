{
  "name": "C Programming Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  
  // Removed GHCR feature references to avoid permission/access errors
  // Install required packages in `postCreateCommand` instead.
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "xaver.clang-format"
      ],
      "settings": {
        "C_Cpp.default.compilerPath": "/usr/bin/gcc",
        "C_Cpp.default.cStandard": "c11",
        "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000
      }
    }
  },
  
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential zsh git curl && gcc --version && echo '✅ Środowisko C gotowe!'",
  
  "remoteUser": "vscode"
}
